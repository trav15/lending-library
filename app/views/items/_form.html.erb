<%= form_for @item do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.hidden_field :donor_id, value: @user.id %>
<%= f.hidden_field :available, value: true %><br>
<%= f.submit :value => "Donate Item" %>
<% end%>

<% if @user == current_user && @item.id != nil %>
<%= form_for @item, method: :delete do |f| %>
<%= f.submit :value => "Delete" %>
<% end %>
<% else %>
<% end %>

<%= link_to "Cancel", items_path, class: "badge badge-warning" %>
