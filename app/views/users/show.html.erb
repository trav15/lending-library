<div class="card w-50">
  <div class="card-body">
    <h2 class="card-title"><%= @user.username%>'s Profile</h2>
    <p class="card-text">Donations: <%= @donation_count %> <%="item".pluralize(@donation_count)%></p>
    <p class="card-text">Total loans: <%= @loan_count %> <%="item".pluralize(@loan_count)%></p>
    <%= link_to "Current Loans", user_loans_path(@user), class:"btn btn-primary" %>
  </div>
</div>
