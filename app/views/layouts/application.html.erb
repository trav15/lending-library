<!DOCTYPE html>
<html>
  <head>
    <title>LendingLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to "Lending Library", root_path %></h1>

    <% if logged_in? %>
    <%= link_to "Borrow Something", items_path %> |
    <%= link_to "Donate Something", new_item_path %> |
    <%= link_to "Log Out", logout_path, method: :delete %>
    <% else %>
    <%= link_to "Sign Up", signup_path %> |
    <%= link_to "Log In ", login_path %>
    <% end %>
  <br><br>
  <div class="container">
    <%= flash[:message] if flash[:message]%>
    <%= flash[:errors] if flash[:errors]%>
    <%= yield %>
  </div>
  </body>
</html>
