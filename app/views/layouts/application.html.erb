<!DOCTYPE html>
<html>
  <head>
    <title>LendingLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #4298f4;">
      <a class="navbar-brand" href="/"><i class="fas fa-hand-holding-heart"></i> LendingLibrary</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if logged_in? %>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Borrow Something", items_path %></span>
          </li>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Donate Something", new_item_path %></span>
          </li>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Log Out", logout_path, method: :delete %></span>
          </li>
          <% else %>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Sign Up", signup_path %></span>
          </li>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Log In ", login_path %></span>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
  <br>
  <div class="container">
    <% if flash[:message] %>
      <div class="alert alert-success" role="alert"><%= flash[:message] %></div>
    <% end %>
    <% if flash[:errors] %>
      <div class="alert alert-danger" role="alert"><%= flash[:errors] %></div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
